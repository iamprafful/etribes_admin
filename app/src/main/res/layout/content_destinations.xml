<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.shadowsoft.adminEnd.destinations"
    tools:showIn="@layout/app_bar_destinations">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ffffff"
            card_view:cardElevation="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="50sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:paddingBottom="10sp">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Name of Destination"
                android:textColor="#000000"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/dName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Enter name of Destinations"
                    android:inputType="text"
                    android:paddingBottom="20dp" />
                <ImageView
                    android:id="@+id/imgname"
                    android:padding="5dp"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignTop="@+id/dName"
                    android:layout_alignBottom="@+id/dName"
                    android:layout_alignRight="@+id/dName"
                    android:src="@drawable/ic_mic_black_24dp"
                    android:onClick="speak_d_name"/>

            </RelativeLayout>


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Short Description"
                android:textColor="#000000"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/sDes"
                    android:paddingBottom="20dp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a one line Description"/>
                <ImageView
                    android:id="@+id/imgOwnName"
                    android:padding="5dp"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignTop="@+id/sDes"
                    android:layout_alignBottom="@+id/sDes"
                    android:layout_alignRight="@+id/sDes"
                    android:src="@drawable/ic_mic_black_24dp"
                    android:onClick="speak_sDes"/>

            </RelativeLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Full Description"
                android:textColor="#000000"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/fDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Enter full Description of destination"
                    android:maxLines="4"
                    android:paddingBottom="20dp" />
                <ImageView
                    android:id="@+id/imgdes"
                    android:padding="5dp"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignTop="@+id/fDes"
                    android:layout_alignBottom="@+id/fDes"
                    android:layout_alignRight="@+id/fDes"
                    android:src="@drawable/ic_mic_black_24dp"
                    android:onClick="speak_fDes"/>

            </RelativeLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Address"
                android:textColor="#000000"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/dAdd"
                    android:paddingBottom="20dp"
                    android:maxLines="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Address of destination"/>
                <ImageView
                    android:id="@+id/imgadd"
                    android:padding="5dp"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignTop="@+id/dAdd"
                    android:layout_alignBottom="@+id/dAdd"
                    android:layout_alignRight="@+id/dAdd"
                    android:src="@drawable/ic_mic_black_24dp"
                    android:onClick="speak_Add"/>

            </RelativeLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
