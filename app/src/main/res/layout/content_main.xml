<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.shadowsoft.adminEnd.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/colorPrimary"
                card_view:cardElevation="10dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_margin="25sp"
                        android:src="@drawable/ic_account_circle_white_48dp"
                        />
                    <LinearLayout
                        android:layout_marginTop="40sp"
                        android:layout_marginBottom="40sp"
                        android:layout_marginRight="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            />



                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="7.5sp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#f44336"
                    card_view:cardElevation="10dp"
                    android:onClick="launch_homestay">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140sp"
                            android:layout_height="140sp"
                            android:src="@drawable/ic_home_white_48dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Register\nHomestay"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="7.5sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#2196F3"
                    card_view:cardElevation="10dp"
                    android:onClick="launch_sell">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140sp"
                            android:layout_height="140sp"
                            android:src="@drawable/ic_store_white_48dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sell Your\nProduct"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_below="@id/ll1"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="7.5sp"
                    android:layout_marginTop="0sp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#009688"
                    card_view:cardElevation="10dp"
                    android:onClick="destination">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140sp"
                            android:layout_height="140sp"
                            android:src="@drawable/ic_photo_white_48dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add a Beautiful\nDestination"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="7.5sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#ff9800"
                    card_view:cardElevation="10dp"
                    android:onClick="launch_food_outlet">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="120sp"
                            android:layout_height="120sp"
                            android:src="@drawable/food_icon"
                            android:layout_gravity="center"/>
                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Food\nOutlet"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_below="@id/ll1"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="7.5sp"
                    android:layout_marginTop="0sp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#829356"
                    card_view:cardElevation="10dp"

                    android:onClick="launch_event">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="140sp"
                            android:layout_height="140sp"
                            android:src="@drawable/ic_event_white_48dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Create Event"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="7.5sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#107896"
                    card_view:cardElevation="10dp"
                    android:onClick="launch_guide">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="120sp"
                            android:layout_height="120sp"
                            android:src="@drawable/ic_verified_user_white_48dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Be a Tourist\nGuide"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>
